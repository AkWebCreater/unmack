<style>
  {% if section.settings.background-image != blank %}
  .section-{{section.id}} .image-with-text{
    background-image:url({{section.settings.background-image | img_url: 'master'}});
    background-position: center center;
    background-size: cover;
	margin-bottom: 2rem; 
    margin-top:0;
    border-radius: 10px;
    margin-left: 10px;
    margin-right: 10px;
    position: relative;
  }
  {% endif %}
  .make-your-own-box .image-with-text{
  margin-bottom:0;
  }
  .section-{{section.id}} .banner__heading {
    margin-bottom: 0;
    color: white;
    font-weight: 600;
}
  .banner__text {
    color: white;
}
  .banner__buttons {
    font-weight: 700;
}
  .section-{{section.id}} .button, .customer button, .shopify-challenge__button {
    padding: 2px;
    min-width: 0;
    min-height: 0;
    border-radius: 5px;
    border: 1px solid #F28B1C;
    background-color: transparent;
    color: #F28B1C;
    box-shadow: none;
}
  .section-{{section.id }} .banner__title{
  	font-size: 5rem;
    color:#E58F34;
  }
  .section-{{section.id }} .banner__content{
        display: block;
        position: unset;
  }
  .section-{{section.id }} .banner__box {
  	position: unset;
  }
  .section-{{section.id }} .right__content{
  	position: absolute;
    right: 20px;
    color: #fff;
    top: 20%;
    font-size: 35px;
    line-height: initial;
    text-align: center;
  }
  
  @media screen and (max-width:768px){
    {% if section.settings.mobile-background-image != blank %}
    .section-{{section.id}} .mobile-background-image{
    background-image:url({{section.settings.mobile-background-image | img_url: 'master'}});
    background-position: center center;
    background-size: cover;
    margin-bottom: 0rem;
  }
    {% endif %}
    .section-{{section.id }} .banner__box{
    	visibility: hidden;
    }
    .section-{{section.id }} .mobile_conatiner_banner_box {
    text-align: center;
      margin-bottom: 5rem;
}
    .section-{{section.id }} .mobile_banner_text {
    text-align: justify;
    padding-left: 10px;
    padding-right: 10px;
}
    .section-{{section.id }} .image-with-text{
    	margin-bottom:0rem;
    }
    .section-{{section.id }} .right__content{
      left: 0px;
      top: 10%;
    }
 }
  @media screen and (min-width:720px){
    .section-{{section.id }} .mobile_conatiner_banner_box{
    	display:none;
    }
  }
</style>