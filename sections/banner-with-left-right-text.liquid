<!-- start section banner-with-left-right-text-->
<section class="section-{{ section.id }}">
  <div class="image-with-text  color-scheme-background-1 mobile-background-image">
     <div class="">
        {% if section.settings.heading != blank %}
          <div class="heading">
            <h2 class="title">{{ section.settings.heading}}</h2>
          </div>
        {% endif %}
       
       <div class="banner__content" style="align-items: {{ section.settings.desktop_text_box_position }};">
    <div class="banner__box">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2 class="banner__heading h2">
              <span>{{ block.settings.heading | escape }}</span>
            </h2>
      	  {%- when 'html' -%}
            <h2 class="banner__title">
              <span>{{ block.settings.title | escape }}</span>
            </h2>
          {%- when 'text' -%}
            <div class="banner__text">
              <span>{{ block.settings.text | escape }}</span>
            </div>
          {%- when 'buttons' -%}
            <div class="banner__buttons{% if block.settings.button_label_1 != blank and block.settings.button_link_1 != blank and block.settings.button_label_2 != blank and block.settings.button_link_2 != blank %} banner__buttons--multiple{% endif %}">
              {%- if block.settings.button_label_1 != blank -%}
                <a href="{{ block.settings.button_link_1 }}" class="button{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}"{% if block.settings.button_link_1 == blank %} aria-disabled="true"{% endif %}>{{ block.settings.button_label_1 | escape }}</a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
    {% if section.settings.right_text != blank %}
    <div class="right__content">
       <div class="text-image">
         {{ section.settings.right_text }}
      </div>
    </div>
   {% endif %}       
  </div>
    </div> 
  </div>
  <div class="mobile_conatiner_banner_box">
  	{%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2 class="mobile_banner_heading">
              <span>{{ block.settings.heading | escape }}</span>
            </h2>
      	  {%- when 'html' -%}
            <h2 class="mobile_banner_title">
              <span>{{ block.settings.title | escape }}</span>
            </h2>
          {%- when 'text' -%}
            <div class="mobile_banner_text">
              <span>{{ block.settings.text | escape }}</span>
            </div>
          {%- when 'buttons' -%}
            <div class="banner__buttons{% if block.settings.button_label_1 != blank and block.settings.button_link_1 != blank and block.settings.button_label_2 != blank and block.settings.button_link_2 != blank %} banner__buttons--multiple{% endif %}">
              {%- if block.settings.button_label_1 != blank -%}
                <a href="{{ block.settings.button_link_1 }}" class="button{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}"{% if block.settings.button_link_1 == blank %} aria-disabled="true"{% endif %}>{{ block.settings.button_label_1 | escape }}</a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
  </div>
</section>
<!-- End section banner-with-left-right-->


