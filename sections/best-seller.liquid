<!-- start section banner-with-text-->
{{ 'section-best-sellers.css' | asset_url | stylesheet_tag }}
<section class="section-{{ section.id }}">
<div class="heading">
    <h2 class="collection-list-title">{{section.settings.section-heading}}</h2></div>
<div class="best-seller-nav grid" >
{%- for block in section.blocks -%}
  <span class="best-seller-nav-item"> {% if block.settings.title == blank %}
      {% assign handle = block.settings.collection %}
      {{collections[handle].title}}
  {% else %}
      {{block.settings.title}}
  {% endif %} </span>  
{%- endfor -%}
</div>
<div class="best-seller-collection-grid-wrapper ">
{%- for block in section.blocks -%}
    {%- if block.settings.collection != blank -%}
        {% assign handle = block.settings.collection %} 
        {%- assign seller_collection = collections[handle] -%}
        <div class="grid grid--1-col grid--2-col-tablet grid--4-col-desktop" >
        {%- for product in seller_collection.products -%}
        <div class="grid__item">
         {% render 'product-card',
                product_card_product: product,
                media_size: 'square',
                show_secondary_image: false,
                add_image_padding: false,
                show_vendor: false
              %}
           </div> 
        {%- endfor -%} 
        </div>       
    {%- endif -%}
{%- endfor -%}
</div>
</section>
<!-- End section banner-with-text-->


{% schema %}
  {
    "name": "Best Seller",
    "class":"best-seller",
    "settings": [
					{
                      "id": "section-heading",
                      "type": "text",
                      "label": "Best Sellers"
                    }
				],
"blocks":[
 
	{
      "type": "collection",
      "name": "title",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "default": "Collection",
          "label": "title"
        },
        {
            "type": "collection",
            "id": "collection",
            "label": "choose collection",
            "info": "choose collection hear form which products will be shown "
        }
      ]
    }
  ],
"presets": [
    {
        "name": "Best Seller",
        "category":"slider"

    }
  ]
}
{% endschema %}

