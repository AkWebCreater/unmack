            <div class="loading-overlay__spinner">
              <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
              </svg>
            </div>
          </div> -->
        </div>
    </li>
    {% endif %}
    {% if bundle.product-3 != blank %}
    {% assign product-3 = all_products[bundle.product-3] %}
    <li class="cart-item ">
      <div class="cart-item__media">
        <div class="cart-image">
          {% if product-3.image %}
          <img class="cart-item__image"
            src="{{ product-3.image | img_url: '150x' }}"
            alt="{{ product-3.image.alt | escape }}"
            loading="lazy"
          >
        {% endif %}
        </div>
      </div>
      <div class="cart-item__details">
        <a href="{{ product-3.url }}" class="cart-item__name h3 break">{{ product-3.title | escape }}</a>
        <div class="add-btn">Add</div>
