    {% if bundle.product-1 != blank %}
    {% assign product-1 = all_products[bundle.product-1] %}
      <li class="cart-item ">
        <div class="cart-item__media">
          <div class="cart-image">
            {% if product-1.image %}
            <img class="cart-item__image"
