    {% if bundle.product-4 != blank %}
    {% assign product-4 = all_products[bundle.product-4] %}
    <li class="cart-item ">
      <div class="cart-item__media">
        <div class="cart-image">
          {% if product-4.image %}
          <img class="cart-item__image"
            src="{{ product-4.image | img_url: '150x' }}"
