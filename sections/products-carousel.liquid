<style>
.slider-header{
    text-align: center;
    margin-bottom: 70px;
}
.slider-header .title{
    margin: 0;
    font-size: 40px;
    font-weight: 700;

}
.slider-slide{
    padding: 0 20px;
}
.slider-slide .card-wrapper{
    border-radius: 10px;
    background-color: #f8f8f8;
    padding: 10px;
}
.slider-slide.slick-current .card-wrapper{
    background-color:#ec7a24;
}
.slider-slide.slick-current .card-information__text{
    color: #fff;
}
.products-slider{
    background-image: url('https://cdn.shopify.com/s/files/1/0591/8192/4552/files/Untitled-2_7f63f67d-5aa9-4b26-ad78-c1108503aa05.png?v=1638154482');
    background-repeat: no-repeat;
    background-size: 100%;
    background-position-y: -29px;
}
</style>
<div class="products-slider page-width">
    <div class="slider-header">
        <h2 class="title accent">{{section.settings.title}}</h2>
        <p class="subtext">{{section.settings.description}}</p>
    </div>
    <div class="slider">
        {% for block in section.blocks %}
            {% if block.settings.collection != blank %}
                {%- assign collection = collections[block.settings.collection] -%}
                {% for product in collection.products %}
                    <div class="slider-slide">
                        {% render 'product-card',
              product_card_product: product,
              media_size: 'square',
              show_secondary_image: false,
              add_image_padding: false,
              show_vendor: false
            %}
            {% render 'price', product:product, price_class: '' %}
                    </div>
                {% endfor %}
                {% else %}
                <div class="slider-slide">
                    {%- assign product = all_products[block.settings.product] -%}
                    
                    {% render 'product-card',
          product_card_product: product,
          media_size: 'square',
          show_secondary_image: false,
          add_image_padding: false,
          show_vendor: false
        %}
        {% render 'price', product:product, price_class: '' %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
</div>

{% schema %}
{ 
     "name": "Product Carousel",
"class":"product-carousel spaced-section",
"settings": [
                {
                  "id": "description",
                  "type": "text",
                  "label": "Our Combo"
                },
                {
                    "id": "title",
                    "type": "text",
                    "label": "Our Combo"
                  }
            ],
    "blocks":[
    {
        "type": "Slide",
        "name": "Product Slide",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Pick Product"
          },
          {
              "type": "collection",
              "id": "collection",
              "label": "Pick collection",
              "info": "choose collection hear form which products will be shown please make sure you can choose only one thing either collection or product  "
          }
        ]
      }
    ],
    "presets": [
    {
        "name": "Product Carousel",
        "category":"slider"

    }
  ]
    
}
{% endschema %}