<!-- start section safety measure -->
<section class="section-{{section.id}}">
  <div class="image-with-text  color-scheme-background-1">
      <div class="page-width">
        {% if section.settings.heading != blank %}
          <div class="heading">
            <h2 class="section-title title">{{ section.settings.heading}}</h2>
          </div>
        <div class="grid heading">
          {% for block in section.blocks %}
          <div class="grid-1">{% if block.settings.image != blank %}
            <div class="grid-up">
              <img src="{{ block.settings.image | img_url:'200x200' }}" class="small-img">
            </div> 
            <div class="grid-down">
              <span>{{ block.settings.title}}</span>
              <p>{{ block.settings.description }}</p>
            </div>
            {% endif %}
          </div>
          {% endfor %}
        </div>
        {% endif %}
    </div>
  
  </div>
</section>
<!-- End section safety measure  -->


{% schema %}
  {
    "name": "Safety Measure",
"class":"safety-measure",
    "settings": [
					{
                      "id": "background-color",
                      "type": "color",
                      "label": "Choose color for background"
                    },
					{
                      "id": "heading",
                      "type": "text",
                      "label": "Enter heading"
                    }

				],
"blocks":[
          {
            "type":"image",
            "name":"image-block",
			"limit":6,
            "settings":[
							{
                              "id":"image",
                              "type":"image_picker",
                              "label":"your image"
                            },
							{
                              "id":"title",
                              "type":"html",
                              "label":"your title"
                            },
							{
                              "id":"description",
                              "type":"html",
                              "label":"your description"
                            }
          				]
          }
        ],
"presets": [
{
"name": "safety measure ",
"category": "ADVANCED LAYOUT"
}
]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}

<style>
 .safety-measure{
    background-color:{{ section.settings.background-color }};
   overflow: auto;
  }
  .safety-measure .grid-1:hover h3{
    color: #B84D1D;
  }
  .safety-measure .grid-1:hover img{
    transform: scale(1.05);
  }
  .safety-measure .heading{
    text-align:center;
  }
  .safety-measure .heading .title:after{
    content: '';
    display: block;
    margin: .25em auto 0;
    width: 100px;
    border-top: 3px solid #B84D1D;
  }


  .section-{{section.id}} .small-img{
  	height:120px;
  }
  .section-{{section.id}} .grid-down span h3 {
    font-weight: 600;
}
 .section-{{section.id}} h2.title {
    /* padding-top: 10px; */
}

  @media screen and (max-width:768px){
    .safety-measure .grid .grid-1{
    	width: 50%;
    }
  }
  @media (min-width:769px) and (max-width:991px) {
    .safety-measure .grid .grid-1{
   max-width: 33.33%;
      width:100%;
  }
  }
  @media (min-width:992px) {
    .safety-measure .grid .grid-1{
   flex:1;
  }
  }
</style>
