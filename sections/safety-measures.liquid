<!-- start section safety measure -->
<section class="section-{{section.id}}">
  <div class="image-with-text  color-scheme-background-1">
    <div class="page-width">
      <div class="page-width">
        {% if section.settings.heading != blank %}
          <div class="heading">
            <h2 class="title">{{ section.settings.heading}}</h2>
          </div>
        {% endif %}
    </div>
  
  </div>
</section>
<!-- End section safety measure  -->


{% schema %}
  {
    "name": "safety measure ",
    "settings": [
					{
                      "id": "background-color",
                      "type": "color",
                      "label": "Choose color for background"
                    },
					{
                      "id": "heading",
                      "type": "text",
                      "label": "Enter heading"
                    }

				],
"blocks":[
          {
            "type":"image",
            "name":"image-block",
			"limit":6,
            "settings":[
							{
                              "id":"image",
                              "type":"image_picker",
                              "label":"your image"
                            },
							{
                              "id":"title",
                              "type":"html",
                              "label":"your title"
                            },
							{
                              "id":"description",
                              "type":"html",
                              "label":"your description"
                            }
          				]
          }
        ],
"presets": [
{
"name": "safety measure ",
"category": "ADVANCED LAYOUT"
}
]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}

