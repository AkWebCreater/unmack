<div class="page-width">
    <h3>{{section.settings.title}}</h3>
    <div class="wrapper grid grid--4-col-desktop grid--2-col-tablet grid--1-col">
        {% for block in section.blocks %}
        <div class="icon-card grid__item">
            <div class="icon">
                <a href="{{block.settings.icon-url}}">
                    <span class="icon"><img src="{{block.settings.card-icon | img_url: 'medium'}}" alt="social icon"></span>
                </a>
            </div>
            <div class="icon-name">
<span class="social-name">{{block.settings.card-name}}</span>
            </div>
        </div> 
        {% endfor %}

    </div>
</div>

{% schema %}
{
  "name": "social connect",
  "class": "spaced-section",
  "settings":[
    {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Social Connect"
        
    }
  ],
  "blocks":[
  {
      "type": "social-card",
      "name":"Social Card",
      "limit":4,
      "settings":[
      {
          "type": "text",
          "id": "card-name",
          "label": "Social Name"
      },
      {
          "type": "image_picker",
          "id": "card-icon",
          "label": "Social Image"
      },
      {
          "type": "url",
          "id": "icon-url",
          "label": "Social Url"
      }
      ]
  }
  ]
}
{% endschema %}