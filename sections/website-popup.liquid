    "settings": [
      {
        "type": "text",
        "id": "heading",
        "default": "Explore the Best With Umanac !",
        "label": "Popup Title"
      }
      
    ],
    "blocks": [
      {
        "type": "popup-card",
        "name": "popup-card",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Card Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Card Name"
          }
        ]
      }
    
    ],
    "max_blocks": 3,
    "presets": [
      {
        "name": "website popup",
        "blocks": [
          {
            "type": "popup-card"
           
          },
          {
            "type": "popup-card"
            
          },
          {
            "type": "popup-card"
            
          }
          
        ]
      }
    ]
}
  {% endschema %}
  