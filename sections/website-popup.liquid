{{ 'website-popup.css' | asset_url | stylesheet_tag }}
<div class="section-wrapper-outer">

    <div class="section-wrapper">
        <h2>{{section.settings.heading}}</h2>
        <a class="close close-window" title="{{ 'cart.ajax_cart.close' | t }}">
            {% include 'icon-close' %}
          </a>
        <div class="wrapper-inner grid grid--3-col-desktop grid--3-col-tablet">
            {% for block in section.blocks %}
                <div class="section-card grid__item">
                    <div class="image">
                        <img src="{{block.settings.image | img_url: 'medium' }}" alt="popupbanner">
                    </div>
                    <div class="section-footer">
                        <a href="{{block.settings.url}}">{{block.settings.title}}</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
<div class="overlay"></div>

  
{% schema %}
{
    "name": "Website Popup",
    "class": "website-popup",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "default": "Explore the Best With Umanac !",
        "label": "Popup Title"
      }
      
    ],
    "blocks": [
      {
        "type": "popup-card",
        "name": "popup-card",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Card Image"
          },
          {
              "type": "url",
              "id": "url",
              "label": "link for card"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Card Name"
          }
        ]
      }
    
    ],
    "max_blocks": 3,
    "presets": [
      {
        "name": "website popup",
        "blocks": [
          {
            "type": "popup-card"
           
          },
          {
            "type": "popup-card"
            
          },
          {
            "type": "popup-card"
            
          }
          
        ]
      }
    ]
}
  {% endschema %}
  