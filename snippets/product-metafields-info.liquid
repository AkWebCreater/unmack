<hr class="custom_hr">
{% if product.metafields.my_fields.product_description != blank %}
<div class="product-metafield-description margin_description">
  <div class="description_heading"><strong>Product Description</strong></div>
  <div class="metafield_description">{{product.metafields.my_fields.product_description}}</div>
</div>
{% endif %}

<div class="description_metafield-section margin_description">
  {%- if product.metafields.my_fields.left_content != blank -%}
  <div class="left_content-product content_section">
    {{ product.metafields.my_fields.left_content }}
  </div>
  {% endif %}
  {%- if product.metafields.my_fields.right_image != blank -%}
  <div class="left_image-product content_section">
    <img src="{{ product.metafields.my_fields.right_image | img_url: 'master' }}" alt="right image" /> 
  </div>
  {% endif %}
</div>

<!-------- metafields Custom Icon ------------>

<div class="decription-main margin_description">
  <div class="decription-image">
    <div class="decription-image-item">
      {%- if product.metafields.my_fields.custom_icon_1 != blank -%}
      <div class="image">
        <img alt="img1" src="{{product.metafields.my_fields.custom_icon_1 | img_url:'80x'}}">
      </div>
      {%- endif -%}
      {%- unless product.metafields.my_fields.custom_icon_text_1 == blank -%}
      <div class="image-text">{{product.metafields.my_fields.custom_icon_text_1}}</div>
      {%- endunless -%}        
    </div>
    <div class="decription-image-item">
      {%- unless product.metafields.my_fields.custom_icon_2 == blank -%}  
      <div class="image"><img alt="img2" src="{{product.metafields.my_fields.custom_icon_2 | img_url:'80x'}}"></div>
      {%- endunless -%}
      {%- unless product.metafields.my_fields.custom_icon_text_2 == blank -%}
      <div class="image-text">{{product.metafields.my_fields.custom_icon_text_2}}</div>
      {%- endunless -%}
    </div>
    <div class="decription-image-item">
      {%- unless product.metafields.my_fields.custom_icon_3 == blank -%}  
      <div class="image"><img alt="img3" src="{{product.metafields.my_fields.custom_icon_3 | img_url:'80x'}}"></div>
      {%- endunless -%}
      {%- unless product.metafields.my_fields.custom_icon_text_3 == blank -%} 
      <div class="image-text">{{product.metafields.my_fields.custom_icon_text_3}}</div>
      {%- endunless -%}
    </div>
    <div class="decription-image-item">
      {%- unless product.metafields.my_fields.custom_icon_4 == blank-%}
      <div class="image"><img alt="img4" src="{{product.metafields.my_fields.custom_icon_4 | img_url:'80x'}}"></div>
      {%- endunless -%}
      {%- unless product.metafields.my_fields.custom_icon_text_4 == blank-%}
      <div class="image-text">{{product.metafields.my_fields.custom_icon_text_4 }}</div>
      {%- endunless -%}
    </div>
    <div class="decription-image-item">
      {%- unless product.metafields.my_fields.custom_icon_5 == blank-%}
      <div class="image"><img alt="img4" src="{{product.metafields.my_fields.custom_icon_5 | img_url:'80x'}}"></div>
      {%- endunless -%}
      {%- unless product.metafields.my_fields.custom_icon_text_5 == blank-%}
      <div class="image-text">{{product.metafields.my_fields.custom_icon_text_5 }}</div>
      {%- endunless -%}
    </div>
  </div>
</div>

<!--- left image and right content ---->
<div class="description_metafield-section margin_description">
  {%- if product.metafields.my_fields.left_image != blank -%}
  <div class="left_image-product content_section">
    <img src="{{ product.metafields.my_fields.left_image | img_url: 'master' }}" alt="left image" /> 
  </div>
  {% endif %}
  {%- if product.metafields.my_fields.right_content != blank -%}
  <div class="right_content-product content_section">
    {{ product.metafields.my_fields.right_content }}
  </div>
  {% endif %}
</div>

<div class="product_description-section margin_description">
  {{ product.description }}
</div>

{%- if product.metafields.my_fields.benefits_image != blank -%}
<div class="product_benefits-section margin_description">
  <img src="{{ product.metafields.my_fields.benefits_image | img_url: 'master' }}" alt="benefits image" />
</div>
{% endif %}


<style>
  .margin_description{
    margin-bottom: 40px;
  }
  .product_benefits-section img, .description_metafield-section img,
  .grid_item-info img{
    width: 100%;
  }
  .description_metafield-section{
    display: flex;
  }
  .description_metafield-section .content_section{
    width: 50%;
  }
  .description_metafield-section .left_content-product{
    padding-right: 40px;
    text-align: justify;
  }
  .description_metafield-section .right_content-product{
    padding-left: 40px;
    text-align: justify;
  }
  .product_description-grid{
    display: flex;
    text-align: -webkit-center;
    text-align: center;
    justify-content: space-between;
  }
  .product_description-grid .grid_item-info{
    width: calc( 20% - 15px);
  }
  @media(max-width: 767px){
    .description_metafield-section{
      flex-direction: column;
    }
    .description_metafield-section .content_section{
      width: 100%;
    }
    .description_metafield-section .left_content-product{
      padding-right: 0;
      order: 2;
    }
    .description_metafield-section .right_content-product{
      padding-left: 0;
      order: 1;
    }
    .product__info-container .collection{
      max-width: 100%;
    }
    .best-seller-product .best-seller-collection-grid-wrapper{
      padding: 0;
    }
  }
</style>